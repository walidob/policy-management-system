{
  "ConnectionStrings": {
    "CatalogConnection": "Data Source=WALID-HOME\\WALIDHOME;Initial Catalog=catalog;Persist Security Info=True;User ID=sa;Password=sa;Trust Server Certificate=True"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/policy-management-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithExceptionDetails"
    ],
    "Properties": {
      "Application": "PolicyManagementApp",
      "Environment": "Development"
    }
  },
  "Demo": {
    "Description": "Set to false in production environments. When true, default tenants and users will be seeded for demonstration purposes.",
    "SeedData": false
  },
  "AllowedHosts": "*"
}
